# 基于 Ubuntu 20.04 的开发环境
FROM ubuntu:20.04

# 设置非交互模式
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=Asia/Shanghai

# 安装基础工具和依赖
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    git \
    wget \
    curl \
    vim \
    g++ \
    gcc \
    make \
    pkg-config \
    libssl-dev \
    libsqlite3-dev \
    libboost-all-dev \
    python3 \
    python3-pip \
    python3-dev \
    tzdata \
    && rm -rf /var/lib/apt/lists/*

# 设置时区
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

# 创建工作目录
WORKDIR /app

# 复制项目文件
COPY . .

# 升级 pip 并安装 Python 依赖
RUN python3 -m pip install --upgrade pip setuptools wheel

# 安装 kungfu Python 依赖
RUN cd /app/core/python && \
    pip3 install click>=5.1 \
    sqlalchemy==1.3.8 \
    psutil==5.6.2 \
    numpy \
    pandas \
    tabulate==0.8.3 \
    PyInquirer==1.0.3 \
    prompt_toolkit==1.0.14 \
    rx==3.0.1

# 设置环境变量
ENV PYTHONPATH=/app/core/python:$PYTHONPATH
ENV PATH=/app/core/build/Release:$PATH

# 暴露可能需要的端口
EXPOSE 8080 9001

# 默认命令
CMD ["/bin/bash"]

